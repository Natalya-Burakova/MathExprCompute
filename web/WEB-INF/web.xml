<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <welcome-file-list>
        <welcome-file>views/start/math.html</welcome-file>
        <welcome-file>views/start/math.htm</welcome-file>
        <welcome-file>views/start/math.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>math</servlet-name>
        <servlet-class>servlets.MathServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>math</servlet-name>
        <url-pattern>/math</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>compute</servlet-name>
        <servlet-class>servlets.ComputeServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>compute</servlet-name>
        <url-pattern>/compute</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>info</servlet-name>
        <servlet-class>servlets.InfoServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>info</servlet-name>
        <url-pattern>/info</url-pattern>
    </servlet-mapping>
</web-app>